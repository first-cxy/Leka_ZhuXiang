<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <Button
        android:id="@+id/button_back"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/abc_list_pressed_holo_light"
        android:padding="4dip"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button_back"
        android:layout_alignBottom="@id/button_back"
        android:layout_toRightOf="@id/button_back"
        android:gravity="center"
        android:padding="4dip"
        android:text="选择场景"
        android:textColor="#000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_back"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_scene01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/fengshan1" />
  <ImageView
                android:id="@+id/iv_scene02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/youlechang4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_scene03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/shenshou2" />
            
            <ImageView
                android:id="@+id/iv_scene04"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/jiguan3" />

          
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>