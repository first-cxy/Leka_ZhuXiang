<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_back"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/abc_list_pressed_holo_light"
        android:padding="4dip"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/button_up"
                android:layout_width="80dp"
                android:layout_height="160dp"
                android:background="@drawable/imageup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_left"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:background="@drawable/imageleft" />

            <Button
                android:id="@+id/button_stop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/imagestop" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:background="@drawable/imageright" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_down"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:background="@drawable/imagedown" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/W:/AndroidCode/codes/04/4.4/LeKab/leKa/src/main/res/layout/activity_control.xml -->